@page "/coming-soon"
@inject NavigationManager NavigationManager

<div class="container text-center mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <i class="bi bi-gear-wide-connected" style="font-size: 4rem; color: var(--bs-primary);"></i>

            <h2 class="mt-3">Coming Soon</h2>
            <p class="lead text-muted">This feature is under development</p>

            <div class="alert alert-info mt-3">
                <strong>@GetPageTitle()</strong> will be available soon
            </div>

            <button class="btn btn-primary mt-3" @onclick="NavigateBack">
                <i class="bi bi-arrow-left"></i> Go Back
            </button>
        </div>
    </div>
</div>

@code {
    private string GetPageTitle()
    {
        var uri = new Uri(NavigationManager.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        return query["page"] ?? "This page";
    }

    private void NavigateBack()
    {
        NavigationManager.NavigateTo("/");
    }
}
